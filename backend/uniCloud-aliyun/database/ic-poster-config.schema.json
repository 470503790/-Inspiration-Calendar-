{
  "bsonType": "object",
  "description": "灵感海报生成配置（由 uni-admin 维护）",
  "required": [],
  "properties": {
    "baiduAccessToken": {
      "bsonType": "string",
      "description": "可选：用于调用百度模型的 Access Token，不设置则读取环境变量 BAIDU_ACCESS_TOKEN"
    },
    "imageSize": {
      "bsonType": "string",
      "description": "图片尺寸，格式如 1024x1024",
      "pattern": "^\\d+x\\d+$"
    },
    "themePrompts": {
      "bsonType": "object",
      "description": "主题对应的提示词，键为主题名称，值为英文提示词",
      "additionalProperties": {
        "bsonType": "string"
      }
    }
  },
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  }
}
