{
  "bsonType": "object",
  "description": "灵感日历生成记录（供 uni-admin 查看与审核）",
  "required": ["date", "theme", "text", "image", "created_at"],
  "properties": {
    "date": {
      "bsonType": "string",
      "description": "用户选择的公历日期，格式如 2024年12月12日"
    },
    "theme": {
      "bsonType": "string",
      "description": "海报主题名称"
    },
    "text": {
      "bsonType": "object",
      "description": "AI 生成的文案内容，结构与 generatePoster 响应一致",
      "properties": {
        "quote": { "bsonType": "string" },
        "author": { "bsonType": "string" },
        "luckyItem": { "bsonType": "string" },
        "luckyColor": { "bsonType": "string" },
        "poem": { "bsonType": "string" },
        "lunarDate": { "bsonType": "string" },
        "solarTerm": { "bsonType": "string" },
        "yi": { "bsonType": "string" },
        "ji": { "bsonType": "string" }
      }
    },
    "image": {
      "bsonType": "string",
      "description": "Base64 图片数据（data:image/png;base64,...)"
    },
    "created_at": {
      "bsonType": "long",
      "description": "生成时间戳（毫秒）"
    }
  },
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  },
  "indexes": {
    "idx_created_at": {
      "order": {
        "created_at": -1
      }
    },
    "idx_theme": {
      "order": {
        "theme": 1
      }
    }
  }
}
